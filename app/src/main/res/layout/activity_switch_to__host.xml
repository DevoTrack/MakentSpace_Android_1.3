<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_switch_to__host"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_shadow"
    tools:context="com.makent.trioangle.host.Switch_to_HostActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/makentspace"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/switch_logoimage" />

    <com.makent.trioangle.palette.TextView.MakentBookTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/switchhost"
        android:textSize="@dimen/big"
        android:textColor="@color/title_text_color"
        android:layout_marginTop="17dp"
        android:id="@+id/switch_text"
        android:layout_below="@+id/switch_logoimage"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
