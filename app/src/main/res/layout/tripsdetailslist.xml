<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/d_bottom"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:id="@+id/inboxlistdetails"
    android:layoutDirection="@string/layout_direction"
    tools:context=".travelling.tabs.TripsActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:orientation="horizontal">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/no_profile_photo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/td_pimage" />
    <com.makent.trioangle.palette.TextView.MakentBookTextView
        android:id="@+id/td_status"
        android:text="Pre-Accepted"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/smallb"
        android:maxLines="1"
        android:textColor="@color/text_shadow" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="15dp"
    android:layout_height="wrap_content">

    <com.makent.trioangle.palette.TextView.MakentBookTextView
        android:text="Name asdfads adsf "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/midv"
        android:ellipsize="end"
        android:singleLine="true"
        android:textStyle="bold"
        android:textColor="@color/text_shadow"
        android:id="@+id/td_username"
         />

    <com.makent.trioangle.palette.TextView.MakentLightTextView
        android:text="6-8 Sep 2016 6-8 Sep 2016 6-8 Sep 2016 6-8 Sep 2016 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/midb"
        android:textAlignment="textStart"
        android:id="@+id/td_date"
        android:layout_below="@+id/td_username"
        android:textColor="@color/text_dark_gray" />
</RelativeLayout>

    <com.makent.trioangle.palette.TextView.MakentLightTextView
        android:id="@+id/td_roomname"
        android:text="Fine, thank you. would you like to..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/midb"
        android:paddingTop="7dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/text_dark_gray" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <com.makent.trioangle.palette.TextView.MakentLightTextView
        android:id="@+id/td_roomdetails"
        android:text="Subterranean style sweeping view sadf "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/midb"
        android:paddingTop="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignBaseline="@+id/td_booknow"
        android:textColor="@color/text_dark_gray"
        android:layout_toStartOf="@+id/td_booknow" />
            <com.makent.trioangle.palette.Button.MakentButton
                android:id="@+id/td_booknow"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/small"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:background="@drawable/d_red_button"
                android:text="@string/booknow"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/title_text_color"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

</RelativeLayout>
