<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lys"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color"
    android:layoutDirection="@string/layout_direction"
    tools:context="com.makent.trioangle.host.optionaldetails.OD_RoomsBeds">
<RelativeLayout
    android:id="@+id/odroomsbeds_title"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:elevation="7dp"
    android:clipToPadding="false"
    android:background="@color/title_text_color"
    android:paddingTop="15dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">
    <RelativeLayout
        android:id="@+id/odroomsbed_title"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    <ImageView
        android:id="@+id/odroomsbeds_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleY=".7"
        android:scaleX=".7"
        android:backgroundTint="@color/text_shadow"
        android:paddingStart="15dp"
        android:paddingEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/icon_checkmark_black"/>


    <com.makent.trioangle.palette.TextView.MakentBookTextView
        android:id="@+id/odroomsbeds"
        android:layout_width="wrap_content"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:layout_height="wrap_content"
        android:textSize="@dimen/midb"
        android:textColor="@color/text_light_shadow"
        android:text="@string/done"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/odroomsbeds_back" />
    </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:id="@+id/odroomsbed_dot_loader"
            android:src="@drawable/dot_loading"
            android:layout_gravity="center_horizontal"/>


</RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/odroomsbeds_title"
        android:layout_alignParentStart="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp">

    <com.makent.trioangle.palette.TextView.MakentBookTextView
        android:id="@+id/odroomsbeds_txt"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/midb"
        android:textColor="@color/text_light_shadow"
        android:text="@string/roomsbeds"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            android:layout_weight="4"
            android:divider="@drawable/divider"
            android:gravity="center"
            android:showDividers="middle"
            android:background="@drawable/d_bottom_shadow">

            <ImageView
                android:id="@+id/odroomsbed_bed_minus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="26dp"
                android:paddingEnd="26dp"
                android:tint="@color/red_text"
                android:src="@drawable/icon_minus"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"/>
            <com.makent.trioangle.palette.TextView.MakentBookTextView
                android:id="@+id/odroomsbed_bed_count"
                android:layout_width="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textSize="@dimen/midi"
                android:textColor="@color/text_light_shadow"
                android:text="1 bed"
                android:layout_weight="2"/>
            <ImageView
                android:id="@+id/odroomsbed_bed_plus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="26dp"
                android:paddingEnd="26dp"
                android:tint="@color/red_text"
                android:src="@drawable/icon_plus"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_weight="4"
            android:divider="@drawable/divider"
            android:gravity="center"
            android:showDividers="middle"
            android:background="@drawable/d_bottom_shadow">

            <ImageView
                android:id="@+id/odroomsbed_bedrooms_minus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="26dp"
                android:paddingEnd="26dp"
                android:tint="@color/red_text"
                android:src="@drawable/icon_minus"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"/>
            <com.makent.trioangle.palette.TextView.MakentBookTextView
                android:id="@+id/odroomsbed_bedrooms_count"
                android:layout_width="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textSize="@dimen/midi"
                android:textColor="@color/text_light_shadow"
                android:text="1 bedroom"
                android:layout_weight="2"/>
            <ImageView
                android:id="@+id/odroomsbed_bedrooms_plus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="26dp"
                android:paddingEnd="26dp"
                android:tint="@color/red_text"
                android:src="@drawable/icon_plus"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:layout_weight="4"
            android:divider="@drawable/divider"
            android:gravity="center"
            android:showDividers="middle"
            android:background="@drawable/d_bottom_shadow">

            <ImageView
                android:id="@+id/odroomsbed_bathrooms_minus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="26dp"
                android:paddingEnd="26dp"
                android:tint="@color/red_text"
                android:src="@drawable/icon_minus"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"/>
            <com.makent.trioangle.palette.TextView.MakentBookTextView
                android:id="@+id/odroomsbed_bathrooms_count"
                android:layout_width="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textSize="@dimen/midi"
                android:textColor="@color/text_light_shadow"
                android:text="1.0 bathroom"
                android:layout_weight="2"/>
            <ImageView
                android:id="@+id/odroomsbed_bathrooms_plus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="26dp"
                android:paddingEnd="26dp"
                android:tint="@color/red_text"
                android:src="@drawable/icon_plus"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginBottom="20dp"
            android:id="@+id/bedtype_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/d_bottom_shadow"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:elevation="2dp"
            android:layout_below="@+id/hometype_head"
            >
            <ImageView
                android:visibility="gone"
                android:id="@+id/hrline7"
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/d_bottom"/>
            <com.makent.trioangle.palette.TextView.MakentBookTextView
                android:text="@string/bed_type"
                android:textColor="@color/text_light_shadow"
                android:textSize="@dimen/midi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bedtype"/>
            <com.makent.trioangle.palette.TextView.MakentBookTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/red_text"
                android:textSize="@dimen/midi"
                android:layout_marginEnd="35dp"
                android:text=""
                android:id="@+id/bedtype_txt"/>
            <ImageView
                android:src="@drawable/n2_standard_row_right_caret_gray"
                android:tint="@color/red_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hrlin4"
                android:scaleX=".8"
                android:scaleY=".8"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/length_of_stay_back"/>
            <Spinner
                android:visibility="gone"
                android:id="@+id/myspinner1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:background="@android:color/transparent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"/>

            <com.makent.trioangle.palette.TextView.MakentBookTextView
                android:text="@string/cancelpolicy"
                android:visibility="gone"
                android:layout_below="@+id/hrline7"
                android:textColor="@color/text_light_shadow"
                android:textSize="@dimen/mid"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bestype_txt"/>
            <ImageView
                android:visibility="gone"
                android:src="@drawable/n2_standard_row_right_caret_gray"
                android:tint="@color/red_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX=".8"
                android:scaleY=".8"
                android:rotation="90"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/bedarrow"/>
        </RelativeLayout>


        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:id="@+id/odlistinginfo_txt"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/midb"
            android:textColor="@color/text_light_shadow"
            android:text="@string/listinginfo"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_weight="4"
            android:divider="@drawable/divider"
            android:gravity="center"
            android:showDividers="middle"
            android:elevation="1dp"
            android:background="@color/title_text_color">

            <ImageView
                android:id="@+id/odroomsbed_guest_minus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="26dp"
                android:paddingEnd="26dp"
                android:tint="@color/red_text"
                android:src="@drawable/icon_minus"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"/>
            <com.makent.trioangle.palette.TextView.MakentBookTextView
                android:id="@+id/odroomsbed_guest_count"
                android:layout_width="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textSize="@dimen/midi"
                android:textColor="@color/text_light_shadow"
                android:text="1 guest"
                android:layout_weight="2"/>
            <ImageView
                android:id="@+id/odroomsbed_guest_plus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="26dp"
                android:paddingEnd="26dp"
                android:tint="@color/red_text"
                android:src="@drawable/icon_plus"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"/>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/listingtype_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/d_bottom_shadow"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true">

            <com.makent.trioangle.palette.TextView.MakentBookTextView
                android:text="@string/property_type"
                android:textColor="@color/text_light_shadow"
                android:textSize="@dimen/midi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listingtype"/>
            <com.makent.trioangle.palette.TextView.MakentBookTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/red_text"
                android:textSize="@dimen/midi"
                android:text=""
                android:id="@+id/listingtype_txt"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/hometype_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/d_bottom_shadow"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_centerHorizontal="true">

            <com.makent.trioangle.palette.TextView.MakentBookTextView
                android:text="@string/room_type"
                android:textColor="@color/text_light_shadow"
                android:textSize="@dimen/midi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hometype"/>
            <com.makent.trioangle.palette.TextView.MakentBookTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/red_text"
                android:textSize="@dimen/midi"
                android:text=""
                android:id="@+id/hometype_txt"/>
        </RelativeLayout>



    </LinearLayout>
    </ScrollView>

    </RelativeLayout>