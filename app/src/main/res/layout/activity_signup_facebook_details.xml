<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/d_gradient_background"
    tools:context="com.makent.trioangle.signup.Signup_FacebookDetails">
    <ImageView
        android:src="@drawable/arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="20dp"
        android:id="@+id/facebook_back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/facebook_back">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">


    <com.makent.trioangle.palette.TextView.MakentLightTextView
        android:text="@string/facebook_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/vbigb"
        android:textColor="@color/title_text_color"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />

    <com.makent.trioangle.palette.TextView.MakentLightTextView
        android:text="@string/facebook_msg"
        android:textSize="@dimen/midb"
        android:textColor="@color/title_text_color"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_passwordmsg"
        android:layout_marginTop="15dp" />
    <com.makent.trioangle.palette.TextView.MakentTextView
        android:text="@string/first_name"
        android:textSize="@dimen/mid"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"/>
    <com.makent.trioangle.palette.EditText.MakentBookEditText
        android:textSize="@dimen/bige"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textCursorDrawable="@null"
        android:layout_marginTop="7dp"
        android:id="@+id/facebook_firstname"
        android:background="@android:color/transparent"
        android:drawableBottom="@drawable/edit_text_bottom_line"
        android:paddingTop="20dp"
        android:paddingBottom="2dp"
        android:textAlignment="viewStart"
        android:textColor="@color/title_text_color"/>
    <com.makent.trioangle.palette.TextView.MakentTextView
        android:text="@string/last_name"
        android:textSize="@dimen/mid"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>
    <com.makent.trioangle.palette.EditText.MakentBookEditText
        android:textSize="@dimen/bige"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textAlignment="viewStart"
        android:textCursorDrawable="@null"
        android:layout_marginTop="7dp"
        android:id="@+id/facebook_lastname"
        android:background="@android:color/transparent"
        android:drawableBottom="@drawable/edit_text_bottom_line"
        android:paddingTop="20dp"
        android:paddingBottom="2dp"
        android:textColor="@color/title_text_color"/>
    <com.makent.trioangle.palette.TextView.MakentTextView
        android:text="@string/birth_day"
        android:textSize="@dimen/mid"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="false" >
    <com.makent.trioangle.palette.EditText.MakentBookEditText
        android:textSize="@dimen/bige"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textCursorDrawable="@null"
        android:layout_marginTop="7dp"
        android:id="@+id/facebook_dob"
        android:background="@android:color/transparent"
        android:drawableBottom="@drawable/edit_text_bottom_line"
        android:paddingTop="20dp"
        android:paddingBottom="2dp"
        android:focusable="false"
        android:textAlignment="viewStart"
        android:imeOptions="flagNoExtractUi"
        android:textColor="@color/title_text_color"/>
        </RelativeLayout>
    <com.makent.trioangle.palette.TextView.MakentTextView
        android:text="@string/email_address"
        android:textSize="@dimen/mid"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>
    <com.makent.trioangle.palette.EditText.MakentBookEditText
        android:textSize="@dimen/bige"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:editable="true"
        android:textAlignment="viewStart"
        android:textCursorDrawable="@null"
        android:layout_marginTop="7dp"
        android:id="@+id/facebook_email"
        android:background="@android:color/transparent"
        android:drawableBottom="@drawable/edit_text_bottom_line"
        android:paddingTop="20dp"
        android:paddingBottom="2dp"
        android:textColor="@color/title_text_color"/>
    </LinearLayout>
</ScrollView>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/d_next_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/facebook_next"
         />
</RelativeLayout>
