<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_editprofile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color"
    android:layoutDirection="@string/layout_direction"
    tools:context="com.makent.trioangle.profile.EditProfileActivity">

    <RelativeLayout
        android:id="@+id/editprofile_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clipToPadding="false"
        android:layout_centerHorizontal="true"
        android:background="@drawable/d_bottom_shadow">

        <ImageView
            android:id="@+id/editprofile_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:scaleY=".9"
            android:scaleX=".9"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back_grayblack_arrow"/>


        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:id="@+id/editprofile"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:layout_height="wrap_content"
            android:textSize="@dimen/big"
            android:textColor="@color/text_light_shadow"
            android:text="@string/editprofile"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/editprofile_back" />
        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:textSize="@dimen/big"
            android:textStyle="bold"
            android:textColor="@color/text_light_shadow"
            android:id="@+id/editprofile_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:paddingEnd="20dp"
            android:layout_below="@+id/profilemain_img"
            android:textAlignment="textStart"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_below="@+id/editprofile_title">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">


         <FrameLayout
             android:id="@+id/carouselLayout"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <!--android:background="@drawable/profile_photo"-->
         <ImageView
             android:id="@+id/editprofile_img"
             android:layout_width="match_parent"
             android:layout_height="250dp"
             android:adjustViewBounds="true"
             android:scaleType="centerCrop"
             android:layout_alignParentTop="true"
             android:layout_alignParentStart="true" />
             <ImageView
                 android:id="@+id/editprofile_camera"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:scaleX=".8"
                 android:scaleY=".8"
                 android:layout_gravity="end|bottom"
                 android:tint="@color/title_text_color"
                 android:layout_alignParentBottom="true"
                 android:layout_alignParentEnd="true"
                 android:src="@drawable/icon_take_photo"/>

         </FrameLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_gravity="center_horizontal"
             android:id="@+id/editprofile_editusername"
             android:gravity="center_horizontal">

             <com.makent.trioangle.palette.TextView.MakentBookTextView
                 android:textSize="@dimen/bigi"
                 android:textStyle="bold"
                 android:textColor="@color/text_light_shadow"
                 android:id="@+id/editprofile_username"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="20dp"
                 android:text="Siva Sonai"
                 android:layout_below="@+id/profilemain_img"
                 android:textAlignment="textStart" />

             <com.makent.trioangle.palette.TextView.MakentBookTextView
                 android:textSize="@dimen/midi"
                 android:textStyle="bold"
                 android:textColor="@color/guestButton"

                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:text="@string/editname"
                 android:textAlignment="textStart" />
             <ImageView
                 android:background="@drawable/d_bottom"
                 android:layout_width="match_parent"
                 android:layout_height="2dp"
                 android:layout_marginTop="10dp"
                 android:layout_below="@+id/profilemain_membersince"
                 android:layout_marginStart="20dp"
                 android:layout_marginEnd="20dp" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:id="@+id/editprofile_editaboutme"
             android:layout_marginEnd="20dp"
             android:layout_marginStart="20dp">

             <com.makent.trioangle.palette.TextView.MakentBookTextView
                 android:textSize="@dimen/midi"
                 android:textStyle="bold"
                 android:textColor="@color/text_light_shadow"
                 android:id="@+id/editprofile_aboutme_title"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="20dp"
                 android:text="@string/aboutme"
                 android:layout_below="@+id/profilemain_img"
                 android:textAlignment="textStart" />
             <com.makent.trioangle.palette.TextView.MakentBookTextView
                 android:textSize="@dimen/midi"
                 android:textStyle="bold"
                 android:maxLines="3"
                 android:ellipsize="end"
                 android:textColor="@color/text_light_shadow"
                 android:id="@+id/editprofile_aboutme"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:text="@string/editname"
                 android:textAlignment="textStart" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
             <com.makent.trioangle.palette.TextView.MakentBookTextView
                 android:textSize="@dimen/midi"
                 android:textStyle="bold"
                 android:textColor="@color/guestButton"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:text="@string/editaboutme"
                 android:layout_centerHorizontal="true"
                 android:textAlignment="textStart" />
            </RelativeLayout>

             <ImageView
                 android:background="@drawable/d_bottom"
                 android:layout_width="match_parent"
                 android:layout_height="2dp"
                 android:layout_marginTop="10dp"
                 android:layout_below="@+id/profilemain_membersince"/>
         </LinearLayout>

         <com.makent.trioangle.palette.TextView.MakentBookTextView
             android:textSize="@dimen/midb"
             android:textStyle="bold"
             android:textColor="@color/text_light_shadow"
             android:id="@+id/editprofile_privatedetails"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/transparent"
             android:layout_marginTop="30dp"
             android:text="@string/privatedetails"
             android:textAlignment="center" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/d_bottom_shadow"
    android:gravity="center_horizontal">



    <RelativeLayout
        android:id="@+id/editprofile_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:background="@drawable/d_bottom"
        android:paddingTop="20dp">
        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:id="@+id/gender_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_light_shadow"
            android:textSize="@dimen/midi"
            android:text="@string/gender"/>
        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:id="@+id/gender_txt1"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/guestButton"
            android:textSize="@dimen/midi"
            android:textAlignment="textEnd"
            android:visibility="gone"
            android:text="@string/gender"/>
        <ImageView
            android:id="@+id/gender_img"
            android:layout_width="wrap_content"
            android:src="@drawable/n2_standard_row_right_caret_gray"
            android:layout_height="wrap_content"
            android:tint="@color/guestButton"
            android:textColor="@color/text_shadow"
            android:scaleX=".7"
            android:scaleY=".7"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/editprofile_dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:background="@drawable/d_bottom"
        android:paddingTop="20dp">
        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:id="@+id/dob_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_light_shadow"
            android:textSize="@dimen/midi"
            android:text="@string/birthdate"/>
        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:id="@+id/dob_txt"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/guestButton"
            android:textSize="@dimen/midi"
            android:textAlignment="textEnd"
            android:text="12/5/1991"/>
        <ImageView
            android:id="@+id/dob_img"
            android:layout_width="wrap_content"
            android:src="@drawable/n2_standard_row_right_caret_gray"
            android:layout_height="wrap_content"
            android:tint="@color/guestButton"
            android:textColor="@color/text_shadow"
            android:scaleX=".7"
            android:scaleY=".7"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/editprofile_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:background="@drawable/d_bottom"
        android:paddingTop="20dp">
        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:id="@+id/email_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_light_shadow"
            android:textSize="@dimen/midi"
            android:text="@string/email"/>
        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:id="@+id/email_txt"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/guestButton"
            android:textSize="@dimen/midi"
            android:textAlignment="textEnd"
            android:text="sivasonai@trioangle.com"
            android:paddingStart="10dp" />
        <ImageView
            android:id="@+id/email_img"
            android:layout_width="wrap_content"
            android:src="@drawable/n2_standard_row_right_caret_gray"
            android:layout_height="wrap_content"
            android:tint="@color/guestButton"
            android:textColor="@color/text_shadow"
            android:scaleX=".7"
            android:scaleY=".7"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/editprofile_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:background="@color/title_text_color"
        android:paddingTop="20dp"
        android:visibility="gone">
        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:id="@+id/phone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_light_shadow"
            android:textSize="@dimen/midi"
            android:text="@string/phone"/>
        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:id="@+id/phone_txt"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/guestButton"
            android:textSize="@dimen/midi"
            android:textAlignment="textEnd"
            android:text="+91 9047607392"
            android:paddingStart="10dp"
            android:layout_toEndOf="@+id/phone_title"/>
        <ImageView
            android:id="@+id/phone_img"
            android:layout_width="wrap_content"
            android:src="@drawable/n2_standard_row_right_caret_gray"
            android:layout_height="wrap_content"
            android:tint="@color/guestButton"
            android:textColor="@color/text_shadow"
            android:scaleX=".7"
            android:scaleY=".7"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
</LinearLayout>
         <com.makent.trioangle.palette.TextView.MakentBookTextView
             android:textSize="@dimen/midb"
             android:textStyle="bold"
             android:textColor="@color/text_light_shadow"
             android:id="@+id/editprofile_optionaldetails"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/transparent"
             android:layout_marginTop="20dp"
             android:text="@string/optionaldetails"
             android:textAlignment="center" />
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_marginStart="20dp"
             android:layout_marginEnd="20dp"
             android:layout_marginBottom="20dp"
             android:layout_marginTop="20dp"
             android:paddingStart="10dp"
             android:paddingEnd="10dp"
             android:paddingBottom="10dp"
             android:background="@drawable/d_bottom_shadow"
             android:gravity="center_horizontal">



             <RelativeLayout
                 android:id="@+id/editprofile_location"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:paddingBottom="20dp"
                 android:background="@drawable/d_bottom"
                 android:paddingTop="20dp">
                 <com.makent.trioangle.palette.TextView.MakentBookTextView
                     android:id="@+id/location_title"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/text_light_shadow"
                     android:textSize="@dimen/midi"
                     android:text="@string/location"/>
                 <com.makent.trioangle.palette.TextView.MakentBookTextView
                     android:id="@+id/location_txt"
                     android:layout_alignParentEnd="true"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/guestButton"
                     android:textSize="@dimen/midi"
                     android:textAlignment="textEnd"
                     android:visibility="gone"
                     android:text="@string/locaiton"
                     android:paddingStart="10dp"
                     android:singleLine="true"
                     android:ellipsize="end" />
                 <ImageView
                     android:id="@+id/location_img"
                     android:layout_width="wrap_content"
                     android:src="@drawable/n2_standard_row_right_caret_gray"
                     android:layout_height="wrap_content"
                     android:tint="@color/guestButton"
                     android:textColor="@color/text_shadow"
                     android:scaleX=".7"
                     android:scaleY=".7"
                     android:layout_alignParentEnd="true"
                     />
             </RelativeLayout>

             <RelativeLayout
                 android:id="@+id/editprofile_school"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:paddingBottom="20dp"
                 android:background="@drawable/d_bottom"
                 android:paddingTop="20dp">
                 <com.makent.trioangle.palette.TextView.MakentBookTextView
                     android:id="@+id/school_title"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/text_light_shadow"
                     android:textSize="@dimen/midi"
                     android:text="@string/school"/>
                 <com.makent.trioangle.palette.TextView.MakentBookTextView
                     android:id="@+id/school_txt"
                     android:layout_alignParentEnd="true"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/guestButton"
                     android:textSize="@dimen/midi"
                     android:visibility="gone"
                     android:textAlignment="textEnd"
                     android:text="@string/school"
                     android:singleLine="true"
                     android:ellipsize="end"
                     android:paddingStart="10dp" />
                 <ImageView
                     android:id="@+id/school_img"
                     android:layout_width="wrap_content"
                     android:src="@drawable/n2_standard_row_right_caret_gray"
                     android:layout_height="wrap_content"
                     android:tint="@color/guestButton"
                     android:textColor="@color/text_shadow"
                     android:scaleX=".7"
                     android:scaleY=".7"
                     android:layout_alignParentEnd="true"
                     />
             </RelativeLayout>
             <RelativeLayout
                 android:id="@+id/editprofile_work"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:paddingBottom="10dp"
                 android:background="@color/title_text_color"
                 android:paddingTop="20dp">
                 <com.makent.trioangle.palette.TextView.MakentBookTextView
                     android:id="@+id/work_title"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/text_light_shadow"
                     android:textSize="@dimen/midi"
                     android:text="@string/work"/>
                 <com.makent.trioangle.palette.TextView.MakentBookTextView
                     android:id="@+id/work_txt"
                     android:layout_alignParentEnd="true"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/guestButton"
                     android:textSize="@dimen/midi"
                     android:textAlignment="textEnd"
                     android:visibility="gone"
                     android:text="work"
                     android:paddingStart="10dp"
                     android:singleLine="true"
                     android:ellipsize="end" />
                 <ImageView
                     android:id="@+id/work_img"
                     android:layout_width="wrap_content"
                     android:src="@drawable/n2_standard_row_right_caret_gray"
                     android:layout_height="wrap_content"
                     android:tint="@color/guestButton"
                     android:textColor="@color/text_shadow"
                     android:scaleX=".7"
                     android:scaleY=".7"
                     android:layout_alignParentEnd="true"
                     />
             </RelativeLayout>

             <RelativeLayout
                 android:visibility="gone"
                 android:id="@+id/editprofile_languages"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:paddingBottom="20dp"
                 android:background="@color/title_text_color"
                 android:paddingTop="20dp">
                 <com.makent.trioangle.palette.TextView.MakentBookTextView
                     android:id="@+id/languages_title"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/text_light_shadow"
                     android:textSize="@dimen/midi"
                     android:text="@string/languages"/>
                 <com.makent.trioangle.palette.TextView.MakentBookTextView
                     android:id="@+id/languages_txt"
                     android:layout_alignParentEnd="true"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/guestButton"
                     android:textSize="@dimen/midi"
                     android:textAlignment="textEnd"
                     android:visibility="gone"
                     android:text="languages"/>
                 <ImageView
                     android:id="@+id/languages_img"
                     android:layout_width="wrap_content"
                     android:src="@drawable/n2_standard_row_right_caret_gray"
                     android:layout_height="wrap_content"
                     android:tint="@color/guestButton"
                     android:textColor="@color/text_shadow"
                     android:scaleX=".7"
                     android:scaleY=".7"
                     android:layout_alignParentEnd="true"
                     />
             </RelativeLayout>
         </LinearLayout>

</LinearLayout>


    </ScrollView>

</RelativeLayout>
