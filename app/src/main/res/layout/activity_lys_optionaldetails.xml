<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lys"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color"
    android:layoutDirection="@string/layout_direction"
    tools:context="com.makent.trioangle.host.LYS_OptionalDetails">

    <RelativeLayout
        android:id="@+id/optionaldetails_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clipToPadding="false"
        android:background="@drawable/d_bottom_shadow"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/optionaldetails_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="20dp"
            android:scaleY=".8"
            android:scaleX=".8"
            android:paddingTop="5dp"
            android:src="@drawable/back_grayblack_arrow"/>


        <com.makent.trioangle.palette.TextView.MakentTextView
            android:id="@+id/optionaldetails"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:layout_height="wrap_content"
            android:textSize="@dimen/big"
            android:textColor="@color/text_light_shadow"
            android:text="@string/optionaldetails"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/optionaldetails_back" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/deactivate_listing"
        android:layout_below="@+id/optionaldetails_title"
        android:paddingBottom="10dp"
        android:clipToPadding="false"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <com.makent.trioangle.palette.TextView.MakentBookTextView
        android:id="@+id/optionaldetails_price_txt"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:layout_height="wrap_content"
        android:textSize="@dimen/midb"
        android:textColor="@color/text_light_shadow"
        android:text="@string/price"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:id="@+id/length_of_stay_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@color/title_text_color"
        android:layout_marginEnd="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:elevation="2dp"
        android:layout_below="@+id/optionaldetails_price"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/hrlin4"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/d_bottom"/>

        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:text="@string/Lenghtofstaydiscounts"
            android:textColor="@color/text_light_shadow"
            android:textSize="@dimen/mid"
            android:layout_below="@+id/hrlin4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/length_of_stay"/>
        <ImageView
            android:src="@drawable/n2_standard_row_right_caret_gray"
            android:tint="@color/red_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hrlin4"
            android:scaleX=".8"
            android:scaleY=".8"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/length_of_stay_back"/>
    </RelativeLayout>


            <RelativeLayout
                android:id="@+id/early_bird_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@color/title_text_color"
                android:layout_marginEnd="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:elevation="2dp"
                android:layout_below="@+id/length_of_stay_price"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/hrlin3"
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/d_bottom"/>

                <com.makent.trioangle.palette.TextView.MakentBookTextView
                    android:text="@string/Earlybirddiscounts"
                    android:textColor="@color/text_light_shadow"
                    android:textSize="@dimen/mid"
                    android:layout_below="@+id/hrlin3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/early_bird_discount"/>
                <ImageView
                    android:src="@drawable/n2_standard_row_right_caret_gray"
                    android:tint="@color/red_text"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/hrlin3"
                    android:layout_height="wrap_content"
                    android:scaleX=".8"
                    android:scaleY=".8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/early_bird_discount_back"/>
            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/last_min_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@color/title_text_color"
                android:layout_marginEnd="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:elevation="2dp"
                android:layout_below="@+id/early_bird_price"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/hrlin2"
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/d_bottom"/>

                <com.makent.trioangle.palette.TextView.MakentBookTextView
                    android:text="@string/Lastmindiscounts"
                    android:layout_below="@+id/hrlin2"
                    android:textColor="@color/text_light_shadow"
                    android:textSize="@dimen/mid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lastmin_discount"/>
                <ImageView
                    android:src="@drawable/n2_standard_row_right_caret_gray"
                    android:tint="@color/red_text"
                    android:layout_below="@+id/hrlin2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX=".8"
                    android:scaleY=".8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/lastmin_discount_back"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/reservation_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@color/title_text_color"
                android:layout_marginEnd="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:elevation="2dp"
                android:layout_below="@+id/last_min_price"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/hrlin1"
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/d_bottom"/>

                <com.makent.trioangle.palette.TextView.MakentBookTextView
                    android:text="@string/ReservationSettings"
                    android:layout_below="@+id/hrlin1"
                    android:textColor="@color/text_light_shadow"
                    android:textSize="@dimen/mid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <ImageView
                    android:id="@+id/reservation_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hrlin1"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleX=".8"
                    android:scaleY=".8"
                    android:src="@drawable/n2_standard_row_right_caret_gray"
                    android:tint="@color/red_text" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/optionaldetails_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@color/title_text_color"
                android:layout_marginEnd="20dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:elevation="2dp"
                android:layout_below="@+id/optionaldetails_price_txt"
                android:layout_centerHorizontal="true">

                <com.makent.trioangle.palette.TextView.MakentBookTextView
                    android:text="@string/additionalprices"
                    android:textColor="@color/text_light_shadow"
                    android:textSize="@dimen/mid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/longterm"/>
                <ImageView
                    android:src="@drawable/n2_standard_row_right_caret_gray"
                    android:tint="@color/red_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX=".8"
                    android:scaleY=".8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/longterm_back"/>
            </RelativeLayout>
    <RelativeLayout
        android:id="@+id/optionaldetails_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@color/title_text_color"
        android:layout_marginEnd="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:elevation="2dp"
        android:layout_below="@+id/reservation_settings"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/hrline3"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/d_bottom"/>

        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:text="@string/currency"
            android:layout_below="@+id/hrline3"
            android:textColor="@color/text_light_shadow"
            android:textSize="@dimen/mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currency"/>
        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/red_text"
            android:textSize="@dimen/mid"
            android:layout_below="@+id/hrline3"
            android:text="@string/usd"
            android:id="@+id/currency_code"/>
    </RelativeLayout>

    <com.makent.trioangle.palette.TextView.MakentBookTextView
        android:id="@+id/optionaldetails_details_txt"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:layout_height="wrap_content"
        android:textSize="@dimen/midb"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_light_shadow"
        android:text="@string/details"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/optionaldetails_currency"/>

    <RelativeLayout
        android:id="@+id/optionaldetails_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@color/title_text_color"
        android:layout_marginEnd="20dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:elevation="2dp"
        android:layout_below="@+id/optionaldetails_details_txt"
        android:layout_centerHorizontal="true">

        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:text="@string/description"
            android:textColor="@color/text_light_shadow"
            android:textSize="@dimen/mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"/>
        <ImageView
            android:src="@drawable/n2_standard_row_right_caret_gray"
            android:tint="@color/red_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX=".8"
            android:scaleY=".8"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/description_back"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/optionaldetails_amenities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@color/title_text_color"
        android:layout_marginEnd="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:elevation="2dp"
        android:layout_below="@+id/optionaldetails_description"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/hrline4"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/d_bottom"/>

        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:text="@string/amenities"
            android:layout_below="@+id/hrline4"
            android:textColor="@color/text_light_shadow"
            android:textSize="@dimen/mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/optionaldetails_amenities_txt"/>
        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/red_text"
            android:textSize="@dimen/mid"
            android:layout_below="@+id/hrline4"
            android:text="@string/none"
            android:paddingEnd="10dp"
            android:id="@+id/optionaldetails_amenities_code"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/optionaldetails_roomsbeds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@color/title_text_color"
        android:layout_marginEnd="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:elevation="2dp"
        android:layout_below="@+id/optionaldetails_amenities"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/hrline5"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/d_bottom"/>



        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:text="@string/roomsbeds"
            android:layout_below="@+id/hrline5"
            android:textColor="@color/text_light_shadow"
            android:textSize="@dimen/mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/optionaldetails_roomsbeds_txt"/>
        <ImageView
            android:src="@drawable/n2_standard_row_right_caret_gray"
            android:tint="@color/red_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX=".8"
            android:scaleY=".8"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/roomsbeds_back"/>
    </RelativeLayout>

            <RelativeLayout
                android:id="@+id/optionaldetails_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/d_bottom"
                android:layout_marginEnd="20dp"
                android:paddingBottom="20dp"
                android:paddingEnd="20dp"
                android:elevation="2dp"
               android:layout_below="@+id/optionaldetails_roomsbeds"
              >
                <ImageView
                    android:id="@+id/hrline6"
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_height=".5dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/d_bottom"/>

                <com.makent.trioangle.palette.TextView.MakentBookTextView
                    android:text="@string/cancelpolicy"
                    android:layout_below="@+id/hrline6"
                    android:textColor="@color/text_light_shadow"
                    android:textSize="@dimen/mid"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/optionaldetails_policy_txt"/>
                <ImageView
                    android:src="@drawable/n2_standard_row_right_caret_gray"
                    android:tint="@color/red_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX=".8"
                    android:scaleY=".8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/policy_back"/>
            </RelativeLayout>





        </RelativeLayout>
    </ScrollView>
    <com.makent.trioangle.palette.TextView.MakentBookTextView
        android:id="@+id/deactivate_listing"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:background="@drawable/d_red_border"
        android:textStyle="bold"
        android:minHeight="50dp"
        android:gravity="center_vertical|center_horizontal"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:textSize="@dimen/midb"
        android:textColor="@color/red_text"
        android:text="@string/deactivatelist"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"/>
    </RelativeLayout>