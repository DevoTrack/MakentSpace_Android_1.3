<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/last_min_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:id="@+id/days_lay"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingEnd="5dp"
            >

            <TextView
                android:id="@+id/day_text"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:editable="false"
                android:text="14 Nights"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/days_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nights"
                android:textSize="20dp"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/percent_lay"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/days_lay"
            >


            <TextView
                android:id="@+id/percentage_txt"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:editable="false"
                android:text="0"
                android:paddingEnd="2dp"
                android:maxLength="2"
                android:layout_toStartOf="@+id/percent_txt"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/percent_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="%"
                android:paddingEnd="27dp"
                android:textSize="20dp"
                />

        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/edit_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="30dp"
        android:src="@drawable/edit"
        android:tint="@color/text_light_gray"
        android:visibility="visible" />

    <ImageView

        android:id="@+id/delete_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="30dp"
        android:layout_toStartOf="@+id/edit_icon"
        android:src="@drawable/delete_image"
        android:tint="@color/hostButton" />

    <ImageView
        android:id="@+id/hrline6"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_below="@+id/last_min_lay"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/d_bottom" />
</RelativeLayout>