<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title_text_color"
    >


    <RelativeLayout
        android:id="@+id/rltApplyCouponBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
       >

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            android:gravity="start"
            android:padding="10dp"
            android:src="@drawable/back_grayblack_arrow"
            android:textAlignment="textStart" />


        >
    </RelativeLayout>


    <com.makent.trioangle.palette.TextView.MakentBookTextView
        android:id="@+id/tvApplyCoupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:text="Apply coupon"
        android:layout_below="@+id/rltApplyCouponBack"
        android:textColor="@color/text_shadow"
        android:textSize="@dimen/midb"
        />

    <EditText
        android:id="@+id/edt_apply_cpoupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rect_noborder"
        android:ems="10"

        android:layout_marginEnd="16dp"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:minHeight="40dp"
        android:layout_below="@+id/tvApplyCoupon"
        android:textAlignment="textStart"
        android:textCursorDrawable="@null"
        >

        <requestFocus />
    </EditText>


    <com.makent.trioangle.palette.TextView.MakentBookTextView
        android:id="@+id/btnCancel"
        android:layout_width="116dp"
        android:layout_height="49dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="36dp"
        android:background="@color/red_text"
        android:gravity="center_vertical"
        android:text="Cancel"
        android:visibility="gone"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/edt_apply_cpoupon"
        android:textAlignment="center"
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/midi"
        />
    <com.makent.trioangle.palette.TextView.MakentBookTextView
        android:id="@+id/btnApply"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:background="@color/red_text"
        android:gravity="center_vertical"
        android:text="Apply"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/edt_apply_cpoupon"
        android:textAlignment="center"
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/midb"
         />


</RelativeLayout>
