<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hostBgc"
    android:layoutDirection="@string/layout_direction"
    tools:context="com.makent.trioangle.signup.Signup_EmailActivity">

    <ImageView
        android:background="@drawable/arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/email_back"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/email_back"
        android:layout_margin="20dp"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="9"
        android:orientation="vertical"
        android:layout_height="0dp">

        <com.makent.trioangle.palette.TextView.MakentLightTextView
            android:text="@string/email_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/vbigb"
            android:textColor="@color/title_text_color"
            android:textStyle="bold"
            android:id="@+id/email_title"
            android:layout_below="@+id/email_back"
            android:layout_alignStart="@+id/email_back" />

        <com.makent.trioangle.palette.TextView.MakentTextView
            android:text="@string/email_address"
            android:textSize="@dimen/mid"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/txt_semail"
            />

        <com.makent.trioangle.palette.EditText.MakentBookEditText
            android:textSize="@dimen/bige"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textCursorDrawable="@null"
            android:ems="10"
            android:layout_below="@+id/txt_semail"
            android:layout_alignLeft="@+id/txt_semail"
            android:layout_alignStart="@+id/txt_semail"
            android:layout_marginTop="7dp"
            android:id="@+id/signup_email"
            android:background="@android:color/transparent"
            android:paddingTop="20dp"
            android:paddingBottom="2dp"
            android:textAlignment="viewStart"
            android:textColor="@color/title_text_color"/>

        <View
            android:id="@+id/UnderLine"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/signup_email"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/txt_semail"
            android:layout_alignStart="@+id/txt_semail"
            android:background="@drawable/edit_text_bottom_line" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="0dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/d_next_button"
                android:layout_gravity="end|right"
                android:id="@+id/email_next" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
