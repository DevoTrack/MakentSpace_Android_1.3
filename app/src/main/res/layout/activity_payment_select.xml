        android:textStyle="bold"
        android:id="@+id/select_payment_title"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/select_payment_back"
        android:layout_alignStart="@+id/select_payment_back"
        android:layout_alignEnd="@+id/select_payment_next" />

    <com.makent.trioangle.palette.TextView.MakentTextView
        android:text="@string/paypal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/bigi"
