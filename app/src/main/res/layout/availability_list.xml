<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/availability_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title_text_color"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <com.makent.trioangle.palette.TextView.MakentLightTextView
        android:id="@+id/during"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/during"
        android:textSize="@dimen/midb"
        android:layout_gravity="center_vertical"
        android:maxLines="5"
        android:ellipsize="end"
        android:layout_alignParentStart="true" />

    <com.makent.trioangle.palette.TextView.MakentLightTextView
        android:layout_below="@+id/during"
        android:id="@+id/minimum_stay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:background="@color/transparent"
        android:text="@string/guest_stay_minimum"
        android:textSize="@dimen/midb"
        android:layout_gravity="center_vertical"/>
    <com.makent.trioangle.palette.TextView.MakentLightTextView
        android:layout_below="@+id/minimum_stay"
        android:id="@+id/maximum_stay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:background="@color/transparent"
        android:text="@string/guest_stay_maximum"
        android:textSize="@dimen/midb"
        android:layout_gravity="center_vertical"/>
    <ImageView
        android:visibility="visible"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/edit_icon"
        android:layout_centerVertical="true"
        android:id="@+id/delete_icon"
        android:tint="@color/text_light_gray"
        android:src="@drawable/delete_image"/>
    <ImageView
        android:visibility="visible"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:id="@+id/edit_icon"
        android:tint="@color/text_light_gray"
        android:src="@drawable/edit"/>
</RelativeLayout>