<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lys"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="@string/layout_direction"
    tools:context="com.makent.trioangle.host.LYS_Step4_EditLocation">

    <RelativeLayout
        android:id="@+id/editlocation_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:background="@drawable/d_bottom_shadow"
        android:paddingTop="15dp"
        android:gravity="start">

        <ImageView
            android:id="@+id/editlocation_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:scaleY=".8"
            android:scaleX=".8"
            android:layout_marginTop="5dp"
            android:src="@drawable/back_grayblack_arrow"/>


        <com.makent.trioangle.palette.TextView.MakentTextView
            android:id="@+id/editlocation"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:layout_height="wrap_content"
            android:textSize="@dimen/big"
            android:textColor="@color/text_light_shadow"
            android:text="@string/editlocaiton"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/editlocation_back" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/editlocation_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/d_bottom_shadow"
        android:layout_below="@+id/editlocation_title"
        android:layout_alignParentStart="true">


        <ImageView
            android:id="@+id/property_type_apartment_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/red_text"
            android:scaleX=".5"
            android:scaleY=".5"
            android:src="@drawable/icon_account_private"
            android:layout_centerVertical="true"/>

        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:id="@+id/property_type_apartment_txt"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:paddingEnd="20dp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:layout_height="wrap_content"
            android:textSize="@dimen/midi"
            android:textColor="@color/text_light_shadow"
            android:text="@string/editlocation_msg"
            android:layout_toEndOf="@+id/property_type_apartment_image" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/editlocation_address_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/d_gray_border"
        android:layout_below="@+id/editlocation_msg"
        android:layout_alignParentStart="true">
        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:id="@+id/mapaddress"
            android:layout_width="match_parent"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:background="@drawable/d_gray_border"
            android:textAlignment="textStart"
            android:layout_height="wrap_content"
            android:textSize="@dimen/midi"
            android:textColor="@color/text_light_shadow"
            android:text="Chennai, Tamil Nadu,India" />

        <ImageView
            android:id="@+id/mapscreenshot"
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:layout_height="150dp"
            android:layout_below="@+id/mapaddress"
            android:background="@drawable/map2"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/editlocation_law"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/d_bottom_shadow"
        android:layout_below="@+id/editlocation_address_details">
        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:id="@+id/law_title"
            android:layout_width="wrap_content"
            android:paddingStart="10dp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:layout_height="wrap_content"
            android:textSize="@dimen/midi"
            android:textColor="@color/text_light_shadow"
            android:text="@string/editlocaiton_law" />

        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:id="@+id/law_msg"
            android:layout_width="wrap_content"
            android:paddingStart="10dp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:layout_height="wrap_content"
            android:textSize="@dimen/mid"
            android:layout_below="@+id/law_title"
            android:textColor="@color/text_dark_gray"

            android:text="@string/editlocaiton_law_msg" />
    </RelativeLayout>

</RelativeLayout>