<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/selectcurrency"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:layoutDirection="@string/layout_direction"
    android:background="@color/title_text_color">


    <com.makent.trioangle.palette.TextView.MakentBookTextView
        android:id="@+id/currencyname_txt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:text="cur_name"
        android:textSize="@dimen/midb" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="50dp"
        android:layout_marginTop="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/divider"
        android:layout_alignEnd="@+id/currencyname_txt"
        android:layout_alignBottom="@+id/currencyname_txt" />

    <com.makent.trioangle.palette.TextView.MakentBookTextView
        android:id="@+id/currencysymbol_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/imageView1"
        android:text="symbol"
        android:textSize="@dimen/midb"/>

    <RadioButton
        android:id="@+id/radioButton1"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:checked="false"
        android:focusable="false"
        android:clickable="false" />

</RelativeLayout>

