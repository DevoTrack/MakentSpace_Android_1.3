<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/d_bottom"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layoutDirection="@string/layout_direction"
    tools:context=".travelling.HomeActivity">


    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/no_profile_photo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/review_image" />

    <com.makent.trioangle.palette.TextView.MakentBookTextView
        android:text="Name"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/midi"
        android:textStyle="bold"
        android:textColor="@color/text_shadow"
        android:layout_toEndOf="@+id/review_image"
        android:layout_marginStart="20dp"
        android:id="@+id/review_name" />

    <com.makent.trioangle.palette.TextView.MakentLightTextView
        android:text="Oct 2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/mid"
        android:id="@+id/review_date"
        android:textColor="@color/text_shadow"
        android:layout_below="@+id/review_name"
        android:layout_alignStart="@+id/review_name" />

    <com.makent.trioangle.palette.TextView.MakentLightTextView
        android:text="Very beautiful place clean and wonderful view and facilities. A little far. Would be nice to add golf car rent service."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/mid"
        android:id="@+id/review_data"
        android:textColor="@color/text_shadow"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/review_image"
        android:layout_alignStart="@+id/review_image" />

</RelativeLayout>
