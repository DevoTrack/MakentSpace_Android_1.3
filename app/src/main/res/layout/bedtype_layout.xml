<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/d_bottom"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    tools:context=".travelling.HomeActivity">


    <com.makent.trioangle.palette.TextView.MakentLightTextView
        android:text="TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/midb"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/text_shadow"
        android:id="@+id/tv_bed_count" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:src="@drawable/ic_trips_search_bar_guests"
        android:id="@+id/iv_bed_type"
        android:layout_alignTop="@+id/tv_bed_count"
        android:layout_alignParentEnd="true"
        />


</RelativeLayout>
