<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="@string/layout_direction"
    android:background="@color/hostBgc"
    tools:context="com.makent.trioangle.signin.Forgot_PasswordActivity">

    <ImageView
        android:background="@drawable/arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/password_back"
        android:layout_marginStart="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/dob_back"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="9"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_height="0dp">

        <com.makent.trioangle.palette.TextView.MakentLightTextView
            android:text="@string/password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/vbigb"
            android:textColor="@color/title_text_color"
            android:textStyle="bold"
            android:id="@+id/password_title"
            android:layout_below="@+id/password_back"
            android:layout_alignLeft="@+id/password_back"
            android:layout_alignStart="@+id/password_back"
            android:layout_marginTop="40dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content">

            <com.makent.trioangle.palette.TextView.MakentTextView
                android:text="@string/password"
                android:textSize="@dimen/mid"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_spassword"
                 />

            <com.makent.trioangle.palette.TextView.MakentTextView
                android:text="@string/show"
                android:textSize="@dimen/mid"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/signup_show"
                android:layout_alignRight="@+id/txt_spassword"
                android:layout_alignEnd="@+id/txt_spassword" />

        </RelativeLayout>

        <com.makent.trioangle.palette.EditText.MakentBookEditText
            android:textSize="@dimen/bige"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:textCursorDrawable="@null"
            android:layout_marginTop="7dp"
            android:id="@+id/signup_password"
            android:layout_alignRight="@+id/password_next"
            android:layout_alignEnd="@+id/password_next"
            android:background="@android:color/transparent"
            android:paddingTop="20dp"
            android:paddingBottom="2dp"
            android:textAlignment="viewStart"
            android:textColor="@color/title_text_color"/>

        <View
            android:id="@+id/UnderLine"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/signup_password"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/txt_semail"
            android:layout_alignRight="@+id/password_next"
            android:layout_alignEnd="@+id/password_next"
            android:background="@drawable/edit_text_bottom_line" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/d_next_button"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="end|right"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/password_next"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <com.makent.trioangle.palette.TextView.MakentLightTextView
        android:text="@string/password_msg"
        android:visibility="gone"
        android:textSize="@dimen/big"
        android:textColor="@color/title_text_color"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_passwordmsg"
        android:layout_marginTop="14dp"
        />

</RelativeLayout>
