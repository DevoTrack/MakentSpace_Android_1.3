<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_text_color"
    android:fitsSystemWindows="true"
    android:layoutDirection="@string/layout_direction"
    tools:context="com.makent.trioangle.travelling.CancellationPolicyActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/title_text_color"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetEnd="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.makent.trioangle.palette.Button.MakentAwesomeButton
                    android:id="@+id/aboutlist_close"
                    android:layout_width="wrap_content"
                    android:paddingStart="30dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="&#xF138;"
                    android:textSize="@dimen/small"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:textColor="@color/text_shadow" />
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/title_text_color">




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:id="@+id/details_lay"
                >

            <com.makent.trioangle.palette.TextView.MakentTextView
                android:text="@string/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/vbigb"
                android:textColor="@color/text_shadow"
                android:id="@+id/aboutlist_title"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <com.makent.trioangle.palette.TextView.MakentLightTextView
                android:text= "About Me About Me About Me About Me About Me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/midb"
                android:textColor="@color/text_shadow"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:id="@+id/aboutlist_details"
                android:layout_below="@+id/aboutlist_title" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_lay"
                android:id="@+id/space"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/d_bottom"
                android:layout_marginTop="10dp"
                >


                <com.makent.trioangle.palette.TextView.MakentTextView
                    android:text="@string/the_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/midv"
                    android:textStyle="bold"
                    android:textColor="@color/text_shadow"
                    android:id="@+id/space_title"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />



                <com.makent.trioangle.palette.TextView.MakentLightTextView
                    android:text= "About Me About Me About Me About Me About Me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/midb"
                    android:layout_below="@+id/space_title"
                    android:textColor="@color/text_shadow"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:id="@+id/desc_space"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/space"
                android:id="@+id/guest_access"
                android:background="@drawable/d_bottom"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                >

                <com.makent.trioangle.palette.TextView.MakentTextView
                    android:text="@string/guest_access_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/midv"
                    android:textStyle="bold"
                    android:textColor="@color/text_shadow"
                    android:id="@+id/access_title"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />



                <com.makent.trioangle.palette.TextView.MakentLightTextView
                    android:text= "About Me About Me About Me About Me About Me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/midb"
                    android:layout_below="@+id/access_title"
                    android:textColor="@color/text_shadow"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:id="@+id/desc_access"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/guest_access"
                android:id="@+id/interaction"
                android:background="@drawable/d_bottom"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                >

                <com.makent.trioangle.palette.TextView.MakentTextView
                    android:text="@string/interaction_with_guests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/midv"
                    android:textStyle="bold"
                    android:textColor="@color/text_shadow"
                    android:id="@+id/interaction_title"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />



                <com.makent.trioangle.palette.TextView.MakentLightTextView
                    android:text= "About Me About Me About Me About Me About Me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/midb"
                    android:layout_below="@+id/interaction_title"
                    android:textColor="@color/text_shadow"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:id="@+id/desc_interaction"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/interaction"
                android:id="@+id/neighbourhood"
                android:background="@drawable/d_bottom"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                >

                <com.makent.trioangle.palette.TextView.MakentTextView
                    android:text="@string/the_neighborhood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/midv"
                    android:textStyle="bold"
                    android:textColor="@color/text_shadow"
                    android:id="@+id/neighbourhood_title"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />



                <com.makent.trioangle.palette.TextView.MakentLightTextView
                    android:text= "About Me About Me About Me About Me About Me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/midb"
                    android:layout_below="@+id/neighbourhood_title"
                    android:textColor="@color/text_shadow"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:id="@+id/desc_neighbourhood"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/neighbourhood"
                android:id="@+id/gettingaround"
                android:background="@drawable/d_bottom"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                >

                <com.makent.trioangle.palette.TextView.MakentTextView
                    android:text="@string/getting_around"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/midv"
                    android:textStyle="bold"
                    android:textColor="@color/text_shadow"
                    android:id="@+id/gettingaround_title"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />



                <com.makent.trioangle.palette.TextView.MakentLightTextView
                    android:text= "About Me About Me About Me About Me About Me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/midb"
                    android:layout_below="@+id/gettingaround_title"
                    android:textColor="@color/text_shadow"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:id="@+id/desc_gettingaround"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gettingaround"
                android:id="@+id/notes"
                android:background="@drawable/d_bottom"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                >

                <com.makent.trioangle.palette.TextView.MakentTextView
                    android:text="@string/other_things_to_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/midv"
                    android:textStyle="bold"
                    android:textColor="@color/text_shadow"
                    android:id="@+id/notes_title"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />



                <com.makent.trioangle.palette.TextView.MakentLightTextView
                    android:text= "About Me About Me About Me About Me About Me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/midb"
                    android:layout_below="@+id/notes_title"
                    android:textColor="@color/text_shadow"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:id="@+id/desc_notes"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notes"
                android:id="@+id/houserules"
                android:background="@drawable/d_bottom"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                >

                <com.makent.trioangle.palette.TextView.MakentTextView
                    android:text="@string/house_rules_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/midv"
                    android:textStyle="bold"
                    android:textColor="@color/text_shadow"
                    android:id="@+id/houserules_title"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />



                <com.makent.trioangle.palette.TextView.MakentLightTextView
                    android:text= "About Me About Me About Me About Me About Me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/midb"
                    android:layout_below="@+id/houserules_title"
                    android:textColor="@color/text_shadow"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:id="@+id/desc_houserules"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/houserules"
                android:id="@+id/rltotherservice"
                android:background="@drawable/d_bottom"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                >

                <com.makent.trioangle.palette.TextView.MakentTextView
                    android:text="@string/other_serivce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/midv"
                    android:textStyle="bold"
                    android:textColor="@color/text_shadow"
                    android:id="@+id/tv_other_service_title"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />



                <com.makent.trioangle.palette.TextView.MakentLightTextView
                    android:text= "About Me About Me About Me About Me About Me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/midb"
                    android:layout_below="@+id/tv_other_service_title"
                    android:textColor="@color/text_shadow"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:id="@+id/tv_other_services"
                    />


            </RelativeLayout>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>
