<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvActivityHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="10dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/ivActivities"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/d_house_rules_select" />
            <com.makent.trioangle.palette.TextView.MakentTextView
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ivActivities"
                android:id="@+id/tvActivities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="asdg jkhdasgkj hdasgkj h"
                android:textColor="@color/text_black"
                android:textSize="@dimen/midv" />
        </RelativeLayout>

        <include
            layout="@layout/price_layout"
            android:id="@+id/incHourlyRate"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
