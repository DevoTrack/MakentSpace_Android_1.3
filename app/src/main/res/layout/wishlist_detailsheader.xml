<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layoutDirection="@string/layout_direction"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/title_text_color">
        <LinearLayout
            android:id="@+id/wishlistdetails"
            android:orientation="vertical"
            android:background="@drawable/d_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.makent.trioangle.palette.TextView.MakentTextView
                android:text="Wish list name"
                android:textSize="@dimen/vbigb"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:drawableEnd="@drawable/icon_edit_profile"
                android:id="@+id/wishlist_title"
                android:drawablePadding="10dp"
                android:maxLines="4"
                android:ellipsize="end"
                android:paddingEnd="10dp"
                android:textColor="@color/text_shadow"/>
            <com.makent.trioangle.palette.TextView.MakentLightTextView
                android:visibility="gone"
                android:text="Anytime . 1 guest . Invite only"
                android:textSize="@dimen/midi"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@+id/wishlist_title"
                android:id="@+id/wishlist_title_detail"
                android:textColor="@color/text_shadow"/>

            <com.makent.trioangle.palette.Button.MakentBookButton
                android:visibility="gone"
                android:text="@string/sharefriends"
                android:textSize="@dimen/midi"
                android:textAllCaps="false"
                android:elevation="0dp"
                android:clipToPadding="false"
                android:background="@drawable/d_blue_line_radius"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:minHeight="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/wishlist_invitefriends"
                android:textColor="@color/background"/>
        </LinearLayout>

        <com.makent.trioangle.palette.TextView.MakentLightTextView
            android:text="@string/availablehome"
            android:textSize="@dimen/bigi"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@+id/wishlistdetails"
            android:id="@+id/wishlist_availablehome"
            android:textColor="@color/text_shadow"/>
        </RelativeLayout>
</LinearLayout>