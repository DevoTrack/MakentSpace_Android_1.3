<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cancel_reservation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="@string/layout_direction"
    tools:context="com.makent.trioangle.travelling.CancelReservationActivity">


    <RelativeLayout
        android:id="@+id/preaccept_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/d_bottom"
        android:gravity="center_vertical"
        android:paddingBottom="0dp"
        android:paddingTop="10dp">
        <com.makent.trioangle.palette.Button.MakentAwesomeButton
            android:background="@android:color/transparent"
            android:text="&#xF138;"
            android:fontFamily="fonts/CircularAir-Bold.otf"
            android:textSize="@dimen/mid"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:id="@+id/preacceptclose"
            android:textColor="@color/text_shadow"/>
        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:id="@+id/preaccept_txt"
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_centerInParent="true"
            android:layout_marginEnd="20dp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:textSize="@dimen/midb"
            android:layout_centerVertical="true"
            android:textColor="@color/text_light_shadow"
            android:text="@string/preacceptrequest"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cancel_reservation"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/preaccept_close">

        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginEnd="20dp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:textSize="@dimen/midb"
            android:layout_centerVertical="true"
            android:textColor="@color/text_light_shadow"
            android:text="@string/preacceptrequest_msg"/>
        <EditText
            android:id="@+id/preaccept_msg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:text=""
            android:gravity="top"
            android:lines="5"
            android:padding="5dp"
            android:textAlignment="viewStart"
            android:background="@drawable/d_gray_border"
            android:layout_below="@+id/cancel_reservation1"/>
        <com.makent.trioangle.palette.Button.MakentBookButton
            android:id="@+id/preaccept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/cancel_reason"
            android:text="@string/preaccept"
            android:textColor="@color/title_text_color"
            android:textAllCaps="false"
            android:textSize="@dimen/big"
            android:background="@drawable/d_red_button"/>

    </LinearLayout>
</RelativeLayout>