<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="@string/layout_direction"
    android:orientation="vertical">

    <!-- For self message -->
    <RelativeLayout

        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/no_profile_photo"
            android:id="@+id/profile_image"
            android:layout_alignBottom="@+id/textmessage"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:id="@+id/textmessage"
            android:background="@drawable/chat_wh"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/profile_image">

            <com.makent.trioangle.palette.TextView.MakentLightTextView
                android:id="@+id/textViewMessage"
                android:textColor="@color/text_shadow"
                android:textSize="@dimen/big"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello how are you?" />

            <com.makent.trioangle.palette.TextView.MakentLightTextView
                android:id="@+id/textViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/text_shadow"
                android:text="Belal Khan, 2016-05-29 16:02:00?"
                android:textSize="@dimen/midi"/>


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>

