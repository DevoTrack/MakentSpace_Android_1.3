<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="@string/layout_direction"
    android:background="@color/title_text_color">

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/lltNoToken"
        android:background="@color/title_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <com.makent.trioangle.palette.TextView.MakentTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/vvbig"
            android:textColor="@color/text_shadow"/>

        <com.makent.trioangle.palette.TextView.MakentBookTextView
            android:id="@+id/tvdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="10dp"
            android:textSize="@dimen/midb"
            android:textColor="@color/text_dark_gray"/>

        <ImageView
            android:id="@+id/ivNoToken"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:scaleType="fitXY"
            />

        <com.makent.trioangle.palette.Button.MakentBookButton
            android:id="@+id/btnNoTokenLogin"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/guestButton"
            android:textAllCaps="false"
            android:background="@drawable/d_blue_line_color_dark"
            android:text="@string/login"/>


    </LinearLayout>

</RelativeLayout>